{{#section 'js'}}
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.js"></script>
<script src="/js/admin-cate.js"></script>
{{/section}}

{{#section 'css'}}
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css">
<link rel="stylesheet" href="/css/admin.css">
{{/section}}
{{#each lcCategory}}
{{this.cateName}}
{{/each}}
<div class="section">
    <div class="container">
        <div class="row">
            <input type="hidden" id="status" name="status" value="{{status}}">
            <input type="hidden" id="message" name="message" value="{{message}}">
            <div class="col-md-3 fixed-aside">
                <!-- ASIDE -->
                <div id="aside" class="">
                    <!-- aside widget -->
                    <div class="aside">
                        <h3 class="aside-title">Quản trị viên</h3>
                        <ul class="list-links">
                            <li><a href="#" class="link-active">
                                    Quản lý danh mục
                                </a></li>
                            <hr>
                            <li class="sub"><a href="#all">Danh mục chính</a></li>
                            <hr>
                            {{#each lcCateList}}
                            <li class="sub"><a href="#sub-{{cateID}}">{{cateName}}</a></li>
                            <hr>
                            {{/each}}
                            <li><a href="/admin/users">Quản lý người dùng</a></li>
                            <hr>
                        </ul>
                    </div>
                    <!-- /aside widget -->
                </div>
                <!-- /ASIDE -->
            </div>

            <div class="col-md-9">
                <!-- row -->
                <div class="row">
                    <div class="col-md-12">
                        <form>
                            <div class="section-title">
                                <h3 class="title">Quản lý danh mục</h3>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div id="all">
                                        <div class="table-header">
                                            <h2>Danh mục chính</h2>
                                            <a href="/admin/add-category" class='primary-btn add-btn' target="_blank"><i
                                                    class="fas fa-plus"></i>
                                                Thêm danh mục mới</i></a>
                                        </div>
                                        <table class="cate-table row-border stripe" style="width: 100%">
                                            <thead>
                                                <tr>
                                                    <th>cateID</th>
                                                    <th>cateName</th>
                                                    <th>cateIcon</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                        </table>
                                    </div>
                                    {{#each lcCateList}}
                                    <div id="sub-{{cateID}}">
                                        <div class="table-header">
                                            <h2>{{cateName}}</h2>
                                            <a href="/admin/add-category-sub/{{cateID}}" target="_blank"
                                                class='primary-btn add-btn'><i class="fas fa-plus"></i>
                                                Thêm danh mục con</i></a>
                                        </div>

                                        <table class="subcate-table row-border stripe" style="width: 100%"
                                            cateID="{{cateID}}">
                                            <thead>
                                                <tr>
                                                    <th>subcateID</th>
                                                    <th>subcateName</th>
                                                    <th>productsCount</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                        </table>
                                    </div>
                                    {{/each}}
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</div>