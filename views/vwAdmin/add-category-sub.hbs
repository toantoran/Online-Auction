{{#section 'js'}}
<script src="/js/plugin/jquery.filer.min.js"></script>
<script src="/js/admin-add-subcate.js"></script>
{{/section}}

{{#section 'css'}}
<link rel="stylesheet" href="/css/jquery.filer-dragdropbox-theme.css">
<link rel="stylesheet" href="/css/jquery.filer.css">
<link rel="stylesheet" href="/css/admin.css">
{{/section}}
{{#each lcCategory}}
{{this.cateName}}
{{/each}}
<div class="section">
    <div class="container">
        <div class="row">
            <input type="hidden" id="status" name="status" value="{{status}}">
            <input type="hidden" id="message" name="message" value="{{message}}">
            <div class="col-md-3 fixed-aside">
                <!-- ASIDE -->
                <div id="aside" class="">
                    <!-- aside widget -->
                    <div class="aside">
                        <h3 class="aside-title">Quản trị viên</h3>
                        <ul class="list-links">
                            <li><a href="/admin/category" class="link-active">
                                    Quản lý danh mục
                                </a></li>
                            <hr>
                            {{#each lcCateList}}
                            <li class="sub"><a href="/admin/add-category-sub/{{cateID}}">{{cateName}}</a></li>
                            <hr>
                            {{/each}}
                            <li><a href="/admin/users">Quản lý người dùng</a></li>
                            <hr>
                        </ul>
                    </div>
                    <!-- /aside widget -->
                </div>
                <!-- /ASIDE -->
            </div>

            <div class="col-md-9">
                <!-- row -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="section-title">
                            <h3 class="title">Thêm danh mục con</h3>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <form action="/admin/add-category-sub/{{parent.cateID}}" enctype="multipart/form-data" method="post">
                                    <input type="hidden" name="subCateIDAdd" value="{{subCateIDAdd}}">
                                    <div class="form-group">
                                        <label for="cateID">ID danh mục cha</label>
                                        <p class="err-validate" id="err-name"></p>
                                        <input class="input" type="text" name="cateID" value="{{parent.cateID}}"
                                            id="cateID" disabled />
                                    </div>
                                    <div class="form-group">
                                        <label for="cateName">Tên danh mục cha</label>
                                        <p class="err-validate" id="err-name"></p>
                                        <input class="input" type="text" name="cateName" value="{{parent.cateName}}"
                                            id="cateName" disabled />
                                    </div>
                                    <div class="form-group">
                                        <label for="subcateName">Tên danh mục con</label>
                                        <p class="err-validate" id="err-name"></p>
                                        <input class="input" type="text" name="subcateName" id="subcateName" autofocus
                                            required />
                                    </div>
                                    <div class="form-group">
                                        <label for="subcate-img">Hình ảnh minh họa</label>
                                        <p class="err-validate" id="err-name"></p>
                                        <input type="file" name="subcate-img" id="subcate-img" required />
                                    </div>
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-12" style="text-align: center;">
                                                <button class="main-btn btn-add"><i class="fas fa-plus"></i>
                                                    Thêm</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>