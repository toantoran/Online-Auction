{{#section 'js'}}
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.js"></script>
<script src="/js/admin-cate-detail.js"></script>
{{/section}}

{{#section 'css'}}
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css">
<link rel="stylesheet" href="/css/admin.css">
{{/section}}
{{#each lcCategory}}
{{this.cateName}}
{{/each}}
<div class="section">
    <div class="container">
        <div class="row">
            <input type="hidden" id="status" name="status" value="{{status}}">
            <input type="hidden" id="message" name="message" value="{{message}}">
            <div class="col-md-3 fixed-aside">
                <!-- ASIDE -->
                <div id="aside" class="">
                    <!-- aside widget -->
                    <div class="aside">
                        <h3 class="aside-title">Quản trị viên</h3>
                        <ul class="list-links">
                            <li><a href="/admin/category" class="link-active">
                                    Quản lý danh mục
                                </a></li>
                            <hr>
                            {{#each lcCateList}}
                            <li class="sub"><a href="/admin/category-detail/{{cateID}}">{{cateName}}</a></li>
                            <hr>
                            {{/each}}
                            <li><a href="/admin/users">Quản lý người dùng</a></li>
                            <hr>
                        </ul>
                    </div>
                    <!-- /aside widget -->
                </div>
                <!-- /ASIDE -->
            </div>

            <div class="col-md-9">
                <!-- row -->
                <div class="row">
                    <div class="col-md-12">
                        <form>
                            <div class="section-title">
                                <h3 class="title">Thêm danh mục mới</h3>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <form action="/admin/add-category" method="post">
                                        <div class="form-group">
                                            <label for="cateName">Tên danh mục</label>
                                            <p class="err-validate" id="err-name"></p>
                                            <input class="input" type="text" name="cateName" id="cateName" autofocus />
                                        </div>
                                        <div class="form-group">
                                            <label for="cateIcon">Icon danh mục: <span
                                                    id="generate-icon"></span></label>
                                            <p class="err-validate" id="err-name"></p>
                                            <input class="input" type="text" name="cateIcon" id="cateIcon" />
                                        </div>
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-md-12" style="text-align: center;">
                                                    <button class="main-btn btn-update"><i class="fas fa-plus"></i>
                                                        Thêm</button>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                        </form>
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>
</div>
</div>
</div>