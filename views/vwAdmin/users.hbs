{{#section 'js'}}
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.js"></script>
<script src="/js/admin-user.js"></script>
{{/section}}

{{#section 'css'}}
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css">
<link rel="stylesheet" href="/css/admin.css">
{{/section}}
{{#each lcCategory}}
{{this.cateName}}
{{/each}}
<div class="section">
    <div class="container">
        <div class="row">
            <input type="hidden" id="status" name="status" value="{{status}}">
            <input type="hidden" id="message" name="message" value="{{message}}">
            <div class="col-md-2 fixed-aside">
                <!-- ASIDE -->
                <div id="aside" class="">
                    <!-- aside widget -->
                    <div class="aside">
                        <h3 class="aside-title">Quản trị viên</h3>
                        <ul class="list-links">
                            <li><a href="/admin/category">Quản lý danh mục</a></li>
                            <hr>
                            <li><a href="#" class="link-active">Quản lý người dùng</a></li>
                            <hr>
                            <li class="sub"><a href="#user-bidder">Người dùng thường</a></li>
                            <hr>
                            <li class="sub"><a href="#user-seller">Người bán</a></li>
                            <hr>
                            <li class="sub"><a href="#user-regis">Người dùng đăng ký làm người bán</a></li>
                            <hr>
                            <li class="sub"><a href="#user-admin">Admin</a></li>
                            <hr>
                        </ul>
                    </div>
                    <!-- /aside widget -->
                </div>
                <!-- /ASIDE -->
            </div>

            <div class="col-md-10">
                <!-- row -->
                <div class="row">
                    <div class="col-md-12">
                        <form>
                            <div class="section-title">
                                <h3 class="title">Quản lý người dùng</h3>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div id="user-bidder">
                                        <h2>Người dùng thường</h2>
                                        <table class="bidder-table row-border stripe" style="width: 100%">
                                            <thead>
                                                <tr>
                                                    <th>ID</th>
                                                    <th>Họ tên</th>
                                                    <th>Email</th>
                                                    <th>Điện thoại</th>
                                                    <th>Địa chỉ</th>
                                                    <th>Ngày sinh</th>
                                                    <th>Điểm</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                        </table>
                                    </div>
                                    <div id="user-seller">
                                        <h2>Người bán</h2>
                                        <table class="seller-table row-border stripe" style="width: 100%">
                                            <thead>
                                                <tr>
                                                    <th>ID</th>
                                                    <th>Họ tên</th>
                                                    <th>Email</th>
                                                    <th>Điện thoại</th>
                                                    <th>Địa chỉ</th>
                                                    <th>Ngày sinh</th>
                                                    <th>Điểm</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                        </table>
                                    </div>
                                    <div id="user-regis">
                                        <h2>Người dùng đăng ký làm người bán</h2>
                                        <table class="regis-table row-border stripe" style="width: 100%">
                                            <thead>
                                                <tr>
                                                    <th>ID</th>
                                                    <th>Họ tên</th>
                                                    <th>Email</th>
                                                    <th>Điện thoại</th>
                                                    <th>Địa chỉ</th>
                                                    <th>Ngày sinh</th>
                                                    <th>Điểm</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                        </table>
                                    </div>
                                    <div id="user-admin">
                                        <h2>Quản trị viên</h2>
                                        <table class="admin-table row-border stripe" style="width: 100%">
                                            <thead>
                                                <tr>
                                                    <th>ID</th>
                                                    <th>Họ tên</th>
                                                    <th>Email</th>
                                                    <th>Điện thoại</th>
                                                    <th>Địa chỉ</th>
                                                    <th>Ngày sinh</th>
                                                    <th>Điểm</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>