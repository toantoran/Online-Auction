{{#section 'js'}}
<script src="/js/plugin/jquery.filer.min.js"></script>
<script src="/js/admin-cate-detail.js"></script>
{{/section}}

{{#section 'css'}}
<link rel="stylesheet" href="/css/jquery.filer-dragdropbox-theme.css">
<link rel="stylesheet" href="/css/jquery.filer.css">
<link rel="stylesheet" href="/css/admin.css">
{{/section}}
{{#each lcCategory}}
{{this.cateName}}
{{/each}}
<div class="section">
    <div class="container">
        <div class="row">
            <input type="hidden" id="status" name="status" value="{{status}}">
            <input type="hidden" id="message" name="message" value="{{message}}">
            <div class="col-md-3 fixed-aside">
                <!-- ASIDE -->
                <div id="aside" class="">
                    <!-- aside widget -->
                    <div class="aside">
                        <h3 class="aside-title">Quản trị viên</h3>
                        <ul class="list-links">
                            <li><a href="/admin/category" class="link-active">
                                    Quản lý danh mục
                                </a></li>
                            <hr>
                            <li class="sub"><a href="/admin/category-detail/{{parent.cateID}}">{{parent.cateName}}</a>
                            </li>
                            <hr>
                            {{#each parent.subCate}}
                            <li class="sub"><a
                                    href="/admin/category-sub-detail/{{cateID}}/{{subcateID}}">{{subcateName}}</a></li>
                            <hr>
                            {{/each}}
                            <li><a href="/admin/users">Quản lý người dùng</a></li>
                            <hr>
                        </ul>
                    </div>
                    <!-- /aside widget -->
                </div>
                <!-- /ASIDE -->
            </div>

            <div class="col-md-9">
                <!-- row -->
                <div class="row">
                    <div class="col-md-12">
                        <form>
                            <div class="section-title">
                                <h3 class="title">Quản lý danh mục</h3>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <h2>{{subcate.subcateName}}</h2>
                                    <form action="" method="post">
                                        <div class="form-group">
                                            <label for="cateID">ID danh mục cha</label>
                                            <p class="err-validate" id="err-name"></p>
                                            <input class="input" type="text" name="cateID" value="{{parent.cateID}}"
                                                id="cateID" disabled />
                                        </div>
                                        <div class="form-group">
                                            <label for="cateName">Tên danh mục cha</label>
                                            <p class="err-validate" id="err-name"></p>
                                            <input class="input" type="text" name="cateName" value="{{parent.cateName}}"
                                                id="cateName" disabled />
                                        </div>
                                        <div class="form-group">
                                            <label for="subcateID">ID danh mục con</label>
                                            <p class="err-validate" id="err-name"></p>
                                            <input class="input" type="text" name="subcateID"
                                                value="{{subcate.subcateID}}" id="subcateID" disabled />
                                        </div>
                                        <div class="form-group">
                                            <label for="subcateName">Tên danh mục con</label>
                                            <p class="err-validate" id="err-name"></p>
                                            <input class="input" type="text" name="subcateName"
                                                value="{{subcate.subcateName}}" id="subcateName" autofocus />
                                        </div>
                                        <div class="form-group">
                                            <label for="productsCount">Hình ảnh minh họa</label>
                                            <p class="err-validate" id="err-name"></p>
                                            <br>
                                            <img src="/img/subcate/{{subcate.cateID}}-{{subcate.subcateID}}.jpg"
                                                alt="" />
                                            <button class="main-btn change-btn" type="button">Thay đổi</button>
                                            <input type="file" name="subcateImg" id="subcate-img"
                                                style="display: none;" />
                                        </div>
                                        <div class="form-group">
                                            <label for="productsCount">Tổng số sản phẩm</label>
                                            <p class="err-validate" id="err-name"></p>
                                            <input class="input" type="text" name="productsCount"
                                                value="{{subcate.productsCount}}" id="productsCount" disabled />
                                        </div>
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-md-12" style="text-align: center;">
                                                    <button class="main-btn btn-update" style="color: green;"><i
                                                            class="fas fa-save"></i> Lưu
                                                        những thay đổi</button>
                                                    <button class="main-btn btn-delete" style="color: red;"><i
                                                            class="fas fa-trash-alt"></i>
                                                        Xóa danh mục</button>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                        </form>
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>
</div>
</div>
</div>