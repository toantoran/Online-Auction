	<!-- container -->
	<div class="container">
		<!-- row -->
		<div class="row">
			<!-- section title -->
			<div class="col-md-12">
				<div class="section-title">
					<h2 class="title">Sản Phẩm Tương Tự</h2>
				</div>
			</div>
			<!-- section title -->
		</div>
		<!-- /row -->
