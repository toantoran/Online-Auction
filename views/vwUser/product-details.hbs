				<div class="product-container">
					{{!-- render sản phẩm tương tự --}}
					{{!-- Từ từ tính --}}
				</div>
			</div>
			<!-- section title -->
		</div>
		<!-- /row -->
	</div>
	<!-- /container -->
</div>
